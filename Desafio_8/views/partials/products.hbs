
<div class="container mt-4">
    <h1 class="text-center mb-4">PRODUCTS STOCK</h1>
    {{#if product.length}}
    <table class="table">
          <thead>
            <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Thumbnail URL</th>
            </tr>
        </thead>
        {{#each products}}
        <tbody>
            <tr>
                <th scope="col">
                    {{this.name}}
                </th>
                <th scope="col">
                    {{this.price}}
                </th>
                <th scope="col">
                    <img src="{{this.thumbnail}}" alt="" style="max-width: 100px;">
                </th>
            </tr>
        </tbody>

        {{/each}}
    </table>
    {{else}}
    <h2>No products register</h2>
    {{/if}}
    {{!-- <button onclick="window.location.href='http://localhost:8080/'" class="btn btn-secondary">Go to Register Products</button>   --}}
</div>


